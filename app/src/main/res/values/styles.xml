<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LightTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText" parent="DarkTextView">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ContentTextDark" parent="DarkTextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ContentTextLight" parent="LightTextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="background">@drawable/selector_bg_white_grey</item>
    </style>

    <style name="MainButton">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ExcelContent">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ExcelTitle" parent="ExcelContent">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

</resources>